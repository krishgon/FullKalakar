<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RatingBar" parent="Theme.Kalakar">
        <item name="colorControlActivated">@color/gray_dim</item>
        <item name="colorControlNormal">@color/gray_light</item>
    </style>
    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="android:textColor">@color/pink_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/pink_dark</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/gray_light</item>
        <item name="android:textColor">@color/pink_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/pink_dark</item>
        <item name="rippleColor">@color/gray_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>