<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kalakar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Kalakar.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/pink_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Kalakar.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pink_light</item>
        <item name="errorEnabled">true</item>
        <item name="startIconTint">@color/gray_light_slate</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Kalakar.TextInputLayout.Large" parent="Widget.Kalakar.TextInputLayout">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

    <style name="Widget.Kalakar.TextInputLayout.Small" parent="Widget.Kalakar.TextInputLayout">
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginRight">75dp</item>
    </style>

<!--    <widget-->
    <style name="Widget.Kalakar.TextInputEditText" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_dark_slate</item>
        <item name="android:textColorHint">@color/gray_light_slate</item>
        <item name="android:textCursorDrawable">@drawable/cursor_pink</item>
    </style>

</resources>

